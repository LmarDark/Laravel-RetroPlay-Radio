<icecast>
    <!-- Informações do servidor -->
    <location>Earth</location>
    <admin>admin@retroplayradio.rondodev.com.br</admin>
    <hostname>retroplayradio.rondodev.com.br</hostname>

    <!-- Limites -->
    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>0</burst-on-connect> <!-- reduz latência inicial, melhora performance -->
        <burst-size>65535</burst-size>
    </limits>

    <!-- Autenticação segura -->
    <authentication>
        <source-password>OnAtIVeRonfLOwlI</source-password>
        <relay-password>OnAtIVeRonfLOwlI</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>972kc7isW9fSzLgU</admin-password>
    </authentication>

    <!-- Porta de escuta -->
    <listen-socket>
        <port>8000</port>
        <!-- Evita bind em 0.0.0.0 se quiser restringir localmente, comente a linha abaixo para produção aberta -->
        <!-- <bind-address>127.0.0.1</bind-address> -->
    </listen-socket>

    <!-- Headers seguros para acesso externo -->
    <http-headers>
        <header name="Access-Control-Allow-Origin" value="https://retroplayradio.rondodev.com.br" />
    </http-headers>

    <fileserve>1</fileserve>

    <!-- Caminhos essenciais -->
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <logdir>/var/lib/icecast2/logs</logdir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <!-- Logs e nível de segurança -->
    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>3</loglevel> <!-- 4=Debug, 3=Info, 2=Warn, 1=Error -->
    </logging>

    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>icecast</user>
            <group>icecast</group>
        </changeowner>
    </security>
</icecast>
